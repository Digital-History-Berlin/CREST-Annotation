{
    "family": "crest-annotation",
    "networkMode": "awsvpc",
    "executionRoleArn": "yes",
    "containerDefinitions": [
      {
        "name": "db",
        "image": "postgres",
        "portMappings": [
            {
                "containerPort": 5432,
                "hostPort": 5432
            }
        ],
        "essential": true,
        "environment": [
            {
                "name": "POSTGRES_USER",
                "value": "crest"
            },
            {
                "name": "POSTGRES_PASSWORD",
                "value": "crest"
            }
        ]
      },
      {
        "name": "backend",
        "image": "967446507766.dkr.ecr.eu-central-1.amazonaws.com/crest-backend",
        "portMappings": [
            {
                "containerPort": 8000,
                "hostPort": 8000
            }
        ],
        "essential": true,
        "environment": [
            {
                "name": "DATABASE_URL",
                "value": "postgresql://crest@db:5432"
            },
            {
                "name": "DATABASE_PASSWORD",
                "value": "crest"
            },
            {
                "name": "CORS_ORIGINS",
                "value": "*"
            }
        ]
      },
      {
        "name": "web",
        "image": "967446507766.dkr.ecr.eu-central-1.amazonaws.com/crest-web",
        "portMappings": [
            {
                "containerPort": 80,
                "hostPort": 80
            }
        ],
        "essential": true,
        "environment": [
            {
                "name": "NODE_ENV",
                "value": "production"
            },
            {
                "name": "REACT_APP_BACKEND",
                "value": "http://crest-LoadB-B023ZX5DKKZV-d31ac2f2ee5049a8.elb.eu-central-1.amazonaws.com:8000"
            }
        ]
      }
    ],
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
  }